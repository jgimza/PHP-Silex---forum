{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="{{ url('homepage') }}">
                    <img src="{{ asset('images/logo.jpg') }}" alt="Logo" class="navbar-brand"></img>
                </a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ url('homepage') }}">Strona główna</a></li>
                <li><a href="{{ url('community_index') }}">Społeczność</a></li>
                <li><a href="{{ url('faq_index') }}">FAQ</a></li>
                <li><a href="#">Rejestracja/logowanie</a></li>
            </ul>
        </div>
    </nav>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr id="tr1">
                <td colspan="5">Lista użytkowników</td>
            </tr>
            </thead>

            <tr align="center">
                <td class="thead" align="left" width="4%" id="mainthead"></td>
                <td class="thead" align="left" width="60%" id="mainthead">Nazwa użytkownika</td>
            </tr>



            <tbody>
            {% for row in communities %}
            <tr align="center">
                <td class="td"><img src="{{ asset('images/tdlogo.jpg') }}" alt="Logo"></td>
                <td align="left" class="td"><div><a href="{{ url('community_view', {'id': row.idForumUser}) }}" title="{{ row.username }}">{{ row.username }}</div></td>

            </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}